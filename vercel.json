{
    "version": 2,
    "builds": [
        {
            "src": "src/vercel.ts",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "public/**",
                    "configs/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/",
            "dest": "/public/welcome.html"
        },
        {
            "src": "/(.*)",
            "dest": "/src/vercel.ts"
        }
    ]
}