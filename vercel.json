{
    "version": 2,
    "builds": [
        {
            "src": "dist/vercel.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "dist/**",
                    "public/**",
                    "configs/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/public/(.*)",
            "dest": "/public/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/dist/vercel.js"
        }
    ],
    "functions": {
        "dist/vercel.js": {
            "memory": 1024,
            "maxDuration": 60
        }
    }
}