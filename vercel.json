{
    "version": 2,
    "builds": [
        {
            "src": "src/vercel.ts",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "public/**",
                    "configs/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/public/(.*)",
            "dest": "/public/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/src/vercel.ts"
        }
    ],
    "functions": {
        "src/vercel.ts": {
            "memory": 1024,
            "maxDuration": 10
        }
    }
}